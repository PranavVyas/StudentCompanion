<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tv_recycler_holiday_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:text="@string/tv_item_holder_holiday_no"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_holiday_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recycler_holiday_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler_holiday_no"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_holiday_day"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_holiday_no"
        app:layout_constraintTop_toTopOf="@+id/tv_recycler_holiday_no"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/tv_recycler_holiday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="@string/tv_item_holder_holiday_holiday_name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler_holiday_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_holiday_day"
        app:layout_constraintTop_toTopOf="@+id/tv_recycler_holiday_day" />

    <TextView
        android:id="@+id/tv_recycler_holiday_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler_holiday_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_holiday_name"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_holiday_date"
        app:layout_constraintTop_toTopOf="@+id/tv_recycler_holiday_date"
        tools:text="@tools:sample/date/day_of_week" />
</androidx.constraintlayout.widget.ConstraintLayout>